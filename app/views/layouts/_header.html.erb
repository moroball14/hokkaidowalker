<div class="header">
  <%= link_to "北海道Walker", root_path, class: "brand-logo title" %>
  <% if user_signed_in? %>
    
    <% if @user.avatar? %>
      <%= image_tag @user.avatar.url(:thumb), class: "avatar-image dropdown-trigger", data: {target: 'dropdown1'} %>
    <% end %>
  <% else %>
    <%= link_to "ログイン", new_user_session_path %>
    <%= link_to "新規登録", new_user_registration_path %>
  <% end %>

  <!-- Dropdown Structure -->
  <ul id='dropdown1' class='dropdown-content'>
    <li><%= link_to 'マイページ', "/user/#{current_user.id}" %></li>
    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
  </ul>
</div>